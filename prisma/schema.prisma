model Ad {
  id          String   @id
  brand       String
  model       String
  year        String
  fuel        String
  km          Int
  color       String
  price       Float //Int //Decimal  @db.Decimal()
  description String
  is_sold     Boolean
  User        User     @relation(fields: [user_id], references: [id])
  user_id     String
  created_at  DateTime
  // udpated_ at DateTime @updatedAt
  // deleted_ at DateTime
  Image       Image?

  @@map("ads")
}
